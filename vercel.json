{
  "version": 2,
  "github": {
    "enabled": false
  },
  "build": {
    "command": "npm install && npm run build"
  },
  "builds": [
    {
      "src": "/apps/server/src/main.ts",
      "use": "@vercel/node"
    },
    {
      "src": "/apps/client/dist/*",
      "use": "@now/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/apps/server/src/main.ts",
      "methods": ["GET", "POST"]
    }
  ]
}
